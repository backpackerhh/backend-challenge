<%= form_for @form.enrollment, html: { class: 'ui form' } do |f| %>
  <%= render 'shared/error_messages', resource: @form.enrollment if @form.errors.any? %>

  <div class="field">
    <%= f.label :course_id %>
    <%= f.collection_select :course_id, @form.courses, :id, :title, include_blank: true %>
  </div>

  <%= button_tag 'Save', type: 'submit', class: 'ui submit button' %>
  <%= link_to 'Back to Enrollments', enrollments_path, class: 'ui secondary button' %>
<% end %>
